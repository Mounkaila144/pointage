{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Registery</h1>
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.nom) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.prenom) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.groupe) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.naissance) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.imageFile , {
                            label: "Visage de L'employer"
                        }) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary me-2">Ajouter</button>
                        {{ form_end(registrationForm) }}</div>
                    <div class="col-md-2">
                        <a href="{{ path('app_employee_index') }}"><i class="btn btn-danger">Retour</i></a>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
